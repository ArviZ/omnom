{
  "name": "omnom-sass",
  "version": "1.0.0",
  "description": "Sass files for omnom",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass ./main.scss ../ext/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass ./main.scss ../css/style.comp.css",
    "concat:css": "concat -o ../css/style.concat.css ../css/fa.min.css ../css/style.comp.css",
    "concat:css:extension": "concat -o ../css/style.concat.css ../ext/webfonts/fa.min.css ../css/style.comp.css",
    "prefix:css": "postcss autoprefixer -b \"last 10 versions\" ../css/style.concat.css -o ../css/style.prefix.css",
    "prefix:css-without-concat": "postcss autoprefixer -b \"last 10 versions\" ../css/style.comp.css -o ../css/style.prefix.css",
    "compress:css": "node-sass ../css/style.prefix.css ../css/style.css --output-style compressed",
    "copy:css": "copyfiles --flat ../css/style.css ../ext",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "clean": "rimraf ../css/style.concat.css ../css/style.comp.css ../css/style.prefix.css",
    "build:css:extension": "npm-run-all compile:sass concat:css:extension prefix:css compress:css copy:css clean",
    "build:css-without-concat": "npm-run-all compile:sass prefix:css-without-concat compress:css"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^9.8.0",
    "concat": "^1.0.3",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1"
  }
}