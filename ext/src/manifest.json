{
	"name": "omnom",
	"version": "0.11.0",
	"manifest_version": 3,
	"description": "Bookmarking & snapshotting extension for omnom services.",
	"content_scripts": [
		{
			"js": [
				"site.js"
			],
            "all_frames": true,
			"matches": [
				"http://*/*",
				"https://*/*",
				"ftp://*/*"
			]
		}
	],
	"action": {
		"default_icon": "icons/omnom.png",
		"default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js",
        "scripts": ["background.js"]
    },
	"icons": {
		"256": "icons/omnom256.png",
		"128": "icons/omnom128.png",
		"32": "icons/omnom32.png",
		"48": "icons/omnom48.png"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
    "host_permissions": [
        "*://*/*"
	],
	"permissions": [
		"activeTab",
		"storage",
        "scripting"
    ],
	"browser_specific_settings": {
	  "gecko": {
		"id": "{f0bca7ce-0cda-41dc-9ea8-126a50fed280}",
		"strict_min_version": "110.0"
	  },
	  "gecko_android": {
		"id": "{f0bca7ce-0cda-41dc-9ea8-126a50fed280}",
		"strict_min_version": "110.0"
	  }
	}
}
